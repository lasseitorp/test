			{% block footer__first %}
				{% include "@molecules/menus/footer-menu/footer-menu.twig" %}
			{% endblock %}
		</div>
		<div {{ bem('second', [], footer__base_class) }}>
			{% block footer__second %}
				{% include "@atoms/links/link/link.twig" with {
					link_title: 'Logga in p√• kundportalen',
					link_url: '#',
					link_modifiers: ['alt', 'inline-block']
